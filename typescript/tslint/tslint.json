{
    "extends": "tslint:recommended",
    "rules": {
        "interface-name": [
            true,
            "never-prefix"
        ],
        "variable-name": [
            true,
            "check-format",
            "ban-keywords"
        ],
        "file-header": [
            true,
            {
                "match": "Project: ",
                "default": "Project: My awesome project",
                "enforce-trailing-newline": true
            }
        ],
        "ordered-imports": true,
        "import-spacing": true,
        "no-duplicate-imports": [
            true,
            {
                "allow-namespace-imports": true
            }
        ],
        "completed-docs": [
            true,
            "enums",
            "functions",
            "methods"
        ],
        "member-ordering": [
            true,
            {
                "order": "statics-first"
            }
        ],
        "indent": [
            true,
            "spaces",
            2
        ],
        "quotemark": [
            true,
            "single",
            "avoid-escape",
            "avoid-template"
        ],
        "max-line-length": [
            true,
            140
        ],
        "align": [
            true,
            "parameters",
            "statements",
            "arguments",
            "members",
            "elements"
        ],
        "no-consecutive-blank-lines": true,
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            },
            {
                "call-signature": "onespace",
                "index-signature": "onespace",
                "parameter": "onespace",
                "property-declaration": "onespace",
                "variable-declaration": "onespace"
            }
        ],
        "no-trailing-whitespace": true,
        "one-line": [true, "check-catch", "check-finally", "check-else", "check-whitespace"],
        "space-before-function-paren": [true, "never"],
        "whitespace": [true, "check-branch", "check-operator", "check-typecast"],
        "eofline": true,
        "comment-format": [true, "check-space"],
        "jsdoc-format": [true, "check-multiline-start"],
        "typedef": [true, "call-signature", "parameter", "member-variable-declaration", "variable-declaration"],
        "one-variable-per-declaration": [true, "ignore-for-loop"],
        "no-unnecessary-initializer": true,
        "no-var-keyword": true,
        "no-empty-interface": true,
        "no-misused-new": true,
        "no-internal-module": true,
        "no-unused-expression": [true, "allow-fast-null-checks"],
        "semicolon": [true, "always"],
        "curly": true,
        "no-shadowed-variable": true,
        "no-switch-case-fall-through": true,
        "no-unsafe-finally": true,
        "only-arrow-functions": true,
        "arrow-parens": true,
        "arrow-return-shorthand": true,
        "no-parameter-reassignment": true,
        "forin": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-duplicate-super": true,
        "no-invalid-this": true,
        "no-string-throw": true,
        "radix": true,
        "triple-equals": true,
        "use-isnan": true,
        "no-construct": true,
        "no-arg": true,
        "prefer-for-of": true,
        "array-type": [true, "array"],
        "callable-types": true,
        "number-literal-format": true,
        "no-eval": true,
        "no-console": true,
        "no-debugger": true
    },
    "jsRules": {}
}